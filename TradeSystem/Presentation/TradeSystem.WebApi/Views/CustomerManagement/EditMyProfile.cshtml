@{
    ViewBag.Title = "Edit My Profile";
    Layout = "~/Views/Shared/_CustomerLoggedInLayout.cshtml";
}
@model TradeSystem.Utils.Models.CustomerDataModel

<!-- Main content -->
<!-- Form -->
<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("EditMyProfile", "CustomerManagement", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-validate form-horizontal" }))
        {
            @Html.ValidationSummary(true)
        <!-- Customer Form -->
            @*<form class="form-horizontal" action="#">
            *@
            @Html.HiddenFor(m => m.Id)
            <div class="panel panel-flat">
                <div class="panel-heading pb-10">
                    <h5 class="panel-title"><span class="text-danger text-size-mini">*@Resources.Languages.Fieldsaremandatory</span></h5>

                </div>

                <div class="panel-body">
                    <!-- Personal Information -->
                    <fieldset>
                        <legend class="text-bold">
                            <i class="icon-file-text2 position-left"></i>
                            Personal Information
                            <a class="control-arrow" data-toggle="collapse" data-target="#AM_personal_information">
                                <i class="icon-circle-down2"></i>
                            </a>
                        </legend>

                        <div class="collapse in" id="AM_personal_information">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">@Resources.Languages.FirstName<span class="text-danger">*</span>:</label>
                                        <div class="col-lg-7">
                                            <input type="text" name="FirstName" value="@Model.FirstName" class="form-control" maxlength="50" required="required" placeholder="@Resources.Languages.FirstName">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">@Resources.Languages.MiddleName:</label>
                                        <div class="col-lg-7">
                                            <input type="text" name="MiddleName" value="@Model.MiddleName" maxlength="50" class="form-control" placeholder="@Resources.Languages.MiddleName">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">@Resources.Languages.LastName<span class="text-danger">*</span>:</label>
                                        <div class="col-lg-7">
                                            <input type="text" name="LastName" value="@Model.LastName" maxlength="50" class="form-control" required="required" placeholder="@Resources.Languages.LastName">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">@Resources.Languages.PhoneNumber:</label>
                                        <div class="col-lg-7">
                                            <input name="Phone" value="@Model.Phone" maxlength="20" class="form-control" data-parsley-type="number" placeholder="@Resources.Languages.PhoneNumber">
                                        </div>
                                    </div>
                                    @*<div class="form-group">
                                        <label class="col-lg-4 control-label">Address:</label>
                                        <div class="col-lg-7">
                                            <textarea cols="5" rows="3" name="Address" value="@Model.Address" maxlength="200" class="form-control">@Model.Address</textarea>
                                        </div>
                                    </div>*@
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    @if (ViewBag.Message != "")
                    {
                        <label class="text-center green">@ViewBag.Message</label>
                    }
                    <!-- /bank details (optional) -->
                    <div class="text-center mt-15">
                        <a class="btn bg-orange" href="@Url.Action("CustomerDashboard","Dashboard")" title="@Resources.Languages.Back"><i class="icon-arrow-left13 position-left"></i> @Resources.Languages.Back </a>
                        <button type="submit" class="btn btn-primary" title="@Resources.Languages.Update">@Resources.Languages.Update <i class="icon-arrow-right14 position-right"></i></button>
                    </div>
                </div>
            </div>
            @*
                </form>*@
        <!-- /customer form -->
        }
    </div>
</div>
<!-- /form -->
