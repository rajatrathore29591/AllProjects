@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_CustomerLoggedInLayout.cshtml";
}
@model TradeSystem.Utils.Models.LoginDataModel


@using (Html.BeginForm("ChangePassword", "CustomerManagement", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-validate" }))
{

	    <!-- Page container -->
    <div class="page-container">

        <!-- Page content -->
        <div class="page-content">

            <!-- Main content -->
            <div class="content-wrapper">
                <!-- Login form -->
                <form action="index.html" class="form-validate">
                    <div class="panel panel-body ">
                        <div class="text-center">
                            <div class="icon-object border-slate-300 text-slate-300"><i class="icon-lock2"></i></div>
                            <h5 class="content-group mt-5">@Resources.Languages.ChangePassword <small class="display-block">@Resources.Languages.Enteryournewpasswordbelow</small></h5>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group has-feedback has-feedback-left">
                                    @*<input type="password" class="form-control" placeholder="@Resources.Languages.OldPassword" required="required" value="@Model.Password">*@
                                    @Html.TextBoxFor(x => x.Password, new { type = "password", data_parsley_password = "", @class = "form-control", placeholder = @Resources.Languages.OldPassword, required = "required", maxlength = "20", minlength = "6" })
                                    <div class="form-control-feedback">
                                        <i class="icon-lock2 text-muted"></i>
                                    </div>
                                    @if (ViewBag.Success == "true")
                                    {
                                        <label class="green">@ViewBag.Message</label>
                                    }
                                    @if (ViewBag.Success == "false")
                                    {
                                        <label class="red">@ViewBag.Message</label>
                                    }
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group has-feedback has-feedback-left">
                                    @*<input type="password" class="form-control" placeholder="@Resources.Languages.NewPassword" required="required" value="@Model.NewPassword">*@
                                    @Html.TextBoxFor(x => x.NewPassword, new { type = "password", data_parsley_password = "", @class = "form-control", placeholder = @Resources.Languages.NewPassword, required = "required", maxlength = "20", minlength = "6" })
                                    @*@Html.ValidationMessageFor(m => m.NewPassword)*@

                                    <div class="form-control-feedback">
                                        <i class="icon-lock2 text-muted"></i>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary" title="@Resources.Languages.Submit">@Resources.Languages.Submit <i class="icon-arrow-right14 position-right"></i></button>
                        </div>
                    </div>
                </form>
                <!-- /login form -->

            </div>
            <!-- /main content -->

        </div>
        <!-- /page content -->

    </div>
	    <!-- /page container -->

}