
@{
    ViewBag.Title = "Customer Dashboard";
    Layout = "~/Views/Shared/_CustomerLoggedInLayout.cshtml";
}

<!-- Dashboard content -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel">
            <!-- Total Investments boxes -->
            <div class="row">
                <div class="col-lg-4 customer-connect-arrow">
                    <!-- Total investments -->
                    <div class="panel bg-teal-400 border-radius text-center mt-40 mb-35 no-margin-bottom">
                        <div class="panel-body">
                            <h3 class="no-margin">@Resources.Languages.TotalEarningTillDate</h3>
                            <div class="f-24x text-semibold">@ViewBag.totalProductValue</div>
                        </div>
                    </div>
                    <!-- /total investments -->
                </div>
                <div class="col-lg-4 customer-connect-add">

                    <!-- Total investments -->
                    <div class="panel bg-blue-400 border-radius text-center mt-40 mb-35 no-margin-bottom">
                        <div class="panel-body ">
                            <h3 class="no-margin">@Resources.Languages.EarningbyInvestment</h3>
                            <div class="f-24x text-semibold">@ViewBag.earningByInvestment</div>
                        </div>
                    </div>
                    <!-- /total investments -->
                </div>
                <div class="col-lg-4">

                    <!-- Total customer -->
                    <div class="panel bg-purple-400 border-radius text-center mt-40 mb-35 no-margin-bottom">
                        <div class="panel-body">
                            <h3 class="no-margin">@Resources.Languages.EarningbySales</h3>
                            <div class="f-24x text-semibold">@ViewBag.earningBySales</div>
                        </div>
                    </div>
                    <!-- /total customer -->
                </div>
            </div>
            <!-- Second Investment Boxes -->
            <div class="row">
                <div class="col-lg-4">
                    <!-- Total value -->
                    <div class="panel bg-pink-400 border-radius text-center">
                        <div class="panel-body">
                            <h3 class="no-margin">@Resources.Languages.VirtualWalletValue</h3>
                            <div class="f-24x text-semibold">@ViewBag.virtualWalletValue</div>
                        </div>
                    </div>
                    <!-- /total value -->
                </div>
                <div class="col-lg-4">
                    <!-- Total value -->
                    <div class="panel bg-orange-400 border-radius text-center">
                        <div class="panel-body">
                            <h3 class="no-margin text-underline">
                                <a href="~/Investment/MyInvestmentsList" class="text-white" title="@Resources.Languages.TotalInvestments">
                                    @Resources.Languages.TotalInvestments
                                    <div class="f-24x text-semibold">@ViewBag.totalInvestmentsCount</div>
                                </a>
                            </h3>

                        </div>
                    </div>
                    <!-- /total value -->
                </div>
                <div class="col-lg-4">
                    <div class="panel bg-slate-400 border-radius text-center">
                        <div class="panel-body">
                            <h3 class="no-margin text-underline">
                                <a href="~/Sale/MySales" class="text-white" title="@Resources.Languages.TotalSales">
                                    @Resources.Languages.TotalSales
                                    <div class="f-24x text-semibold">@ViewBag.totalSalesCount</div>
                                </a>
                                </a>
                            </a>
                        </h3>

                    </div>
                </div>
                <!-- /total investment amount -->
            </div>
        </div>
        <!-- /second investment boxes -->
    </div>
    <!-- /total investments boxes -->
</div>
</div>
<!-- /dashboard content -->
