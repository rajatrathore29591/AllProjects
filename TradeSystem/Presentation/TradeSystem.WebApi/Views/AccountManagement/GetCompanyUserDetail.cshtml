@{
    ViewBag.Title = "GetCompanyUserDetail";
    Layout = "~/Views/Shared/_LoggedInLayout.cshtml";
}
@model TradeSystem.Utils.Models.CompanyUserDataModel

<!-- Main content -->
<!-- Form -->
<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("EditCompanyUser", "CompanyUser", FormMethod.Post, new { enctype = "multipart/form-data",@class="form-validate form-horizontal" }))
        {
            @Html.ValidationSummary(true)
        <!-- Customer Form -->
            @*<form class="form-horizontal" action="#">
            *@
            @Html.HiddenFor(m => m.Id)
            <div class="panel panel-flat">
                <div class="panel-heading pb-10">
                    <h5 class="panel-title"><span class="text-danger text-size-mini">* Fields are mandatory</span></h5>

                </div>

                <div class="panel-body">
                    <!-- Personal Information -->
                    <fieldset>
                        <legend class="text-bold">
                            <i class="icon-file-text2 position-left"></i>
                            Personal Information
                            <a class="control-arrow" data-toggle="collapse" data-target="#AM_personal_information">
                                <i class="icon-circle-down2"></i>
                            </a>
                        </legend>

                        <div class="collapse in" id="AM_personal_information">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">First Name<span class="text-danger">*</span>:</label>
                                        <div class="col-lg-7">
                                            <input type="text" name="FirstName" value="@Model.FirstName" class="form-control" maxlength="50" required="required">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">Middle Name:</label>
                                        <div class="col-lg-7">
                                            <input type="text" name="MiddleName" value="@Model.MiddleName" maxlength="50" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">Last Name<span class="text-danger">*</span>:</label>
                                        <div class="col-lg-7">
                                            <input type="text" name="LastName" value="@Model.LastName" maxlength="50" class="form-control" required="required">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">Phone Number:</label>
                                        <div class="col-lg-7">
                                            <input name="Phone" value="@Model.Phone" maxlength="20" class="form-control"  data-parsley-type="number">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">Address:</label>
                                        <div class="col-lg-7">
                                            <textarea cols="5" rows="3" name="Address" value="@Model.Address" maxlength="200" class="form-control"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <!-- /personal information -->
                    <!-- Login Details -->
                    <fieldset>
                        <legend class="text-bold">
                            <i class="icon-reading position-left"></i>
                            Login Details
                            <a class="control-arrow" data-toggle="collapse" data-target="#AM_login_details">
                                <i class="icon-circle-down2"></i>
                            </a>
                        </legend>

                        <div class="collapse in" id="AM_login_details">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">Username<span class="text-danger">*</span>:</label>
                                        <div class="col-lg-7">
                                            <input type="text" readonly="readonly" name="UserName" minlength="5" maxlength="50" value="@Model.UserName" class="form-control" required="required">
                                        </div>
                                    </div>
                                </div>
                                @*<div class="form-group">
                                            <label class="col-lg-4 control-label">Password<span class="text-danger">*</span>:</label>
                                            <div class="col-lg-7">
                                                <input type="password" name="Password" value="@Model.Password" class="form-control"  required="required">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-lg-4 control-label">Confirm Password<span class="text-danger">*</span>:</label>
                                            <div class="col-lg-7">
                                                <input type="password" name="ConfirmPassword" value="@Model.ConfirmPassword" class="form-control" required="required">
                                            </div>
                                        </div>
                                    </div>*@
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">Email Address<span class="text-danger">*</span>:</label>
                                        <div class="col-lg-7">
                                            <input type="email" name="Email" value="@Model.Email" maxlength="50" class="form-control" required="required">
                                        </div>
                                    </div>

                                    @*<div class="form-group">
                                            <label class="col-lg-4 control-label">Confirm Email<span class="text-danger">*</span>:</label>
                                            <div class="col-lg-7">
                                                <input type="email" name="ConfirmEmail" value="@Model.ConfirmEmail" class="form-control"  required="required">
                                            </div>
                                        </div>*@
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <!-- login details -->
                    <!-- Bank Details (Optional) -->
                    <fieldset>
                        <legend class="text-bold">
                            <i class="icon-cash4 position-left"></i>
                            Role Permission
                            <a class="control-arrow" data-toggle="collapse" data-target="#AM_bank_details">
                                <i class="icon-circle-down2"></i>
                            </a>
                        </legend>

                        <div class="collapse in" id="AM_bank_details">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">Select Role:</label>
                                        <div class="col-lg-7">
                                            <select name="RoleId" class="form-control" required>
                                                <option value="Select">Select</option>
                                                @foreach (var roles in ViewBag.Roles)
                                                {

                                                    if (roles.Id == Model.RoleId)
                                                    {
                                                        <option value="@roles.Id" selected="selected" required>@roles.Name</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@roles.Id">@roles.Name</option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="col-lg-12">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <!-- /bank details (optional) -->
                    <div class="text-center mt-15">
                        <button class="btn bg-orange" title="Back"><i class="icon-arrow-left13 position-left"></i> Back </button>
                        <button type="submit" class="btn btn-primary" title="Update">Update <i class="icon-arrow-right14 position-right"></i></button>
                    </div>
                </div>
            </div>
            @*
                </form>*@
        <!-- /customer form -->
        }
    </div>
</div>
<!-- /form -->
