@model ICanSpeakWebsite.Models.ContactUsModel
@{
    ViewBag.Title = "ContactUs";
    Layout = "~/Views/Shared/_FAQLayout.cshtml";
}
<style type="text/css">
    .nav li a {
        background-color: white;
        color: #464646;
    }
</style>
<div class="row">
    <div class="container">
        <div class="col-lg-3 content-box">
            <h2 class="container-text">Company </h2>
            <ul class="nav nav-pills nav-stacked">
                <li><a href="../../ICanSpeak/AboutUs">About us</a></li>
                <li><a href="../../ICanSpeak/Mission">Mission</a></li>
                <li><a style="background-color: #36ABDD;" href="../../ICanSpeak/ContactUs">Contact Us</a></li>
            </ul>
        </div>
        <div class="col-lg-9 content-box-1">
            <form class="form-horizontal">
                <fieldset>
                    <legend>Contact Us</legend>
                    <div class="form-group">
                        <label for="inputEmail" class="col-lg-2 control-label">Full Name</label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" id="FullName" placeholder="Your Name" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword" class="col-lg-2 control-label">Email</label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" id="EmailId" placeholder="Email" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword" class="col-lg-2 control-label">Contact No.</label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" id="ContactNo" placeholder="Contact No" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="textArea" class="col-lg-2 control-label">Comments/Query</label>
                        <div class="col-lg-10">
                            <textarea class="form-control" rows="3" id="Message" placeholder="Your Comments" required></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button class="btn btn-info">Cancel</button>
                            <button type="submit" class="btn btn-primary" onclick="Submit()">Submit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
<script type="text/javascript">
    function Submit() {
        alert();
        $.ajax({
            url: '@Url.Action("ContactUs", "ICanSpeak")',
            type: "POST",
            data: { FullName: $("#FullName").val(), EmailId: $("#EmailId").val(), ContactNo: $("#ContactNo").val(), Message: $("#Message").val() },
            success: function (result) {
                if (result == "Success") {
                    window.location.href = "../../Home/Index"
                }
                else {
                    $("#msg").text("An error occured , please try again.");
                    $("#msg").css("color", "red");
                }
                $("#msg").focus();
                $(document).scrollTop(0);
            },
            error: function (result) {
            }
        });
    }
</script>
