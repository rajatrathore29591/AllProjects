@model IEnumerable<ICanSpeakWebsite.Models.Users>
@{
    ViewBag.Title = "Tutors";
}


<div class="col-lg-12 ">
    <header>
        <h2>My Tutors</h2>
    </header>

    @{
        if (Model.Count() > 0 && Model != null)
        {
            foreach (var item in Model)
            {
                var imgname = "D:\\Running Project\\iCanSpeak\\trunk\\dotnet\\Services\\iCanSpeakServices\\ProfilePictures\\" + @item.UserId + "_ProfilePic.jpg";
        <div class="col-lg-12 tutor-wrap">
            <div class="col-lg-1 tutor-pic">

                <img class="img-responsive" src="@item.ProfilePicture" />
            </div>
            <div class="col-lg-5">
                <h2 class="tutor-name">
                    @item.FirstName @item.LastName.Substring(0, 1)</h2>
                <h4 class="tutor-city-name">@item.Country</h4>
                <h4 class="tutor-city-name"><span class=" blue">Experience - </span>@item.Experience Years</h4>
                <h4 class="tutor-city-name"><span class=" blue">Specialisation - </span>@item.Specialisation</h4>
                <p>@item.AboutMe</p>
                <a href="../Tutor/TutorDetails?userid=@item.UserId">
                    <button class="submit-but">More</button></a>
            </div>
        </div>            
            }
        }
        else
        {
        <h1>There is no Tutors</h1>
        }
    }
    <div class="col-lg-12">

        <ul class="pagination pagination-sm">
            <li class="disabled"><a href="#">«</a></li>
            <li class="active"><a href="#">1</a></li>
            <li><a href="#">2</a></li>
