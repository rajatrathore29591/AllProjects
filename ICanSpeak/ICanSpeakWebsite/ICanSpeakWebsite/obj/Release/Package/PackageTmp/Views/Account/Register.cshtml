<script>
    $(document).ready(function () {
        $('#FirstName').keypress(function (event) {
            event = (event) ? event : window.event;
            var charCode = (event.which) ? event.which : event.keyCode;
            if (charCode > 96 && charCode < 123) {
                return true;
            }
            return false;
        });

        $('#LastName').keypress(function (event) {
            event = (event) ? event : window.event;
            var charCode = (event.which) ? event.which : event.keyCode;
            if (charCode > 96 && charCode < 123) {
                return true;
            }
            return false;
        });

        $('#ZipCode').keypress(function (event) {
            event = (event) ? event : window.event;
            var charCode = (event.which) ? event.which : event.keyCode;
            if (charCode > 31 && (charCode < 48 || charCode > 57)) {
                return false; 
            }
            return true;
        });

        $("#RegisterForm").validate({
            //rules: {
            //    Pass: {
            //        minlength: 5
            //    },
            //    confirmPassword: {
            //        minlength: 5,
            //        equalTo: "#Password"
            //    }
            //}
        });
        $("#DOB").datepicker({
            changeMonth: true,
            changeYear: true
        });
        $("#ddlCountry").change(function () {
            $("#Country").val($("#ddlCountry option:selected").text());
        });

        if ($("#rdMale").prop("checked") == true)
            $("#Gender").val("Male");
        else
            $("#Gender").val("Female");

        jQuery('input:radio[name="optionsRadios"]').change(function () {
            if ($("#rdMale").prop("checked") == true)
                $("#Gender").val("Male");
            else
                $("#Gender").val("Female");
        });
    });
</script>
 <script type="text/javascript">
     function showimagepreview(input) {
         if (input.files && input.files[0]) {
             var reader = new FileReader();
             reader.onload = function (e) {
                 var files = e.files;
                 var filePath = input.value;

                 var ext = filePath.substring(filePath.lastIndexOf('.') + 1).toLowerCase();
                 if ($.inArray(ext, ['jpg', 'png', 'jpeg']) == -1) {
                     alert('hii');
                     alert('You can only upload .jpg,.png, .jpeg files');
                     input.value = '';
                     e.preventDefault();
                     return false;
                 }
                 $("#imagebase64").val(e.target.result);
                 $('#imgprvw').attr('src', e.target.result);

             };
             reader.readAsDataURL(input.files[0]);
         }
     }

     function audiocheck(input) {
         if (input.files && input.files[0]) {
             var reader = new FileReader();
             reader.onload = function (e) {
                 var files = e.files;
                 var filePath = input.value;

                 var ext = filePath.substring(filePath.lastIndexOf('.') + 1).toLowerCase();
                 if ($.inArray(ext, ['mp3']) == -1) {
                     alert('You can only upload mp3 files');
                     input.value = '';
                     e.preventDefault();
                     return false;
                 }
             };
             reader.readAsDataURL(input.files[0]);
         }
     }
</script>
