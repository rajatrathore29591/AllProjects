                        <div class="clearfix"></div>
                    </div>
                    <div class="pull-right MT-20 MR20">
                        <button type="button" class="btn btn-info ML20 submitAns">Submit</button>
                        @*<button type="button" class="btn btn-info ML20 nextQues">Next</button>*@
                    </div>
                </div>
            </div>
        }
    </div>
</div>
