@{
    ViewBag.Title = "FlashCardWordList";
}

<script src="@Url.Content("/Scripts/jquery.min.js")"></script>

<div class="row accordian">
    <div class="container">

        <div class="col-lg-12 ">
            <h2 class="header">Flash Word</h2>


        </div>

        <a href="../Home/MyCourse">
            <div class="col-lg-2 grey-wrapper">
                <h2>Grammar</h2>
            </div>
        </a>
        <a href="../Vocab/VocabList">
            <div class="col-lg-2 blue-wrapper2">
                <h2>Vocabulary</h2>
            </div>
        </a>
        <a href="../Dialog/DialogList">
            <div class="col-lg-2 grey-wrapper">
                <h2>Dialogue</h2>
            </div>
        </a>

        <div class="clearfix"></div>
        @if (ViewBag.FlashWords != null)
        {
            <div class="vocab-wrapper">

                <div class="col-lg-12">
                    <div class="tab-pane ">
                        @foreach (var words in ViewBag.FlashWords)
                        {
                            //if (Convert.ToInt32(@words["RowIndex"]) % 2 != 0)
                            //{
                            <div class="panel panel-default panel-bottom">
                                <a href="">
                                    <div class="panel-body panel-body-Padding unit-tab">
                                        @words["Word"]
                                        <i class="fa fa-arrow-circle-right course-size" style="cursor: pointer;"></i>
                                    </div>
                                </a>
                            </div>
                            //}
                            //else
                            //{
                            @*<div class="panel panel-default panel-bottom">
                                <a href="../../Vocab/WordDetail?id=@words["WordId"]&VocabularyId=@words["VocabularyId"]">
                                    <div class="panel-body panel-body-Padding unit-tab2">
                                        @words["Word"]
                                        <i class="fa fa-arrow-circle-right course-size" style="cursor: pointer;"></i>
                                    </div>
                                </a>
                            </div> *@
                            //}
                        }
                    </div>
                </div>
            </div>
        }
        else
        { 
                  
            <div class="col-lg-12">
                <div class="alert alert-dismissible alert-info">

                    <p>
                        <h4>No Words Available</h4>
                    </p>
                </div>

            </div>
              
        }
    </div>
</div>
