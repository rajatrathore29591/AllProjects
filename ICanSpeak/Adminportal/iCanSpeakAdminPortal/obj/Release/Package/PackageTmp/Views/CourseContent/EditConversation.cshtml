@{
    ViewBag.Title = "EditConversation";
}

@using (Html.BeginForm("UpdateConversation", "CourseContent", FormMethod.Post))
{
<div id="page-wrapper">

    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    <font color="44c9ff">Edit Conversation</font>
                </h1>
            </div>
                    </div>

        <!--Edit Table start-->
        @foreach (var item in Model)
        { 
        <div class="col-lg-6 col-lg-offset-2 col-md-6 col-md-offset-2  col-sm-6 col-sm-offset-2 col-xs-12">
            <div class="row">  
                <input name="conversationid" type="hidden" value="@item.ConversationId" />
                <input type="hidden" name="dialogids" value="@item.DialogId" />
                <input type="hidden" name="DialogGender" value="@Request["gender"]"/>
                <label id="msg" style="font-size:16pt;"></label>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Person One English Text <span style="color:#FE2801;">*</span></label>
                        <input type="text" maxlength="499" required name="oneengtxt" class="form-control"  value="@item.Person1Text" placeholder="English Text">
                    </div>
                <div class="form-group">
                        <label for="exampleInputEmail1">Person One Arabic Text <span style="color:#FE2801;">*</span></label>
                        <input type="text" maxlength="499" required name="onearbtxt" class="form-control" value="@item.Person1ArabicText" placeholder="English Text">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Person Two English Text <span style="color:#FE2801;">*</span></label>
                        <input type="text" maxlength="499" required name="twoengtxt" class="form-control"  value="@item.Person2Text" placeholder="Arabic Text">
                    </div>
                <div class="form-group">
                        <label for="exampleInputPassword1">Person Two Arabic Text <span style="color:#FE2801;">*</span></label>
                        <input type="text" maxlength="499" required name="twoarbtxt" class="form-control"  value="@item.Person2ArabicText" placeholder="Arabic Text">
                    </div>
                    <div class="form-group">
                        
                        <button class="btn btn-info" type="submit" >Submit</button>&nbsp;&nbsp;
                        <a href="../../Admin/CourseContent/ConversationList?dialogid=@item.DialogId&gender=@Request["gender"]">
                        <input type="button" class="btn btn-info" value="Cancel" /></a>
                    </div>
               <div >
                 <h1 style="font-size: 25px;color: red;">@TempData["Message"]</h1> 

               </div>
            </div>
        </div>
        }
    </div>
</div>
}

