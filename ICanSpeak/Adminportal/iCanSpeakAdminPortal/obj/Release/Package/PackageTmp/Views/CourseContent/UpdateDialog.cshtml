        $(".valid").keypress(function (e) {
            if (e.which < 97 || e.which > 122) {
                e.preventDefault();
            }
        });
    });
</script>
<style>
        .fileUpload {
            position: relative;
            overflow: hidden;
            margin: 10px;
        }

            .fileUpload input.upload {
                position: absolute;
                top: 0;
                right: 0;
                margin: 0;
                padding: 0px 10px;
