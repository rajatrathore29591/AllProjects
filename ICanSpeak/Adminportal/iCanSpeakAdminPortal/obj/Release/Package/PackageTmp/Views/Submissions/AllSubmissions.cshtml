@{
    ViewBag.Title = "AllSubmissions";
}

<script src="@Url.Content("~/Content/jAlert/jquery.alerts.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/jAlert/jquery.alerts.css")" rel="stylesheet" type="text/css" />
<script type="text/javascript">
    $(document).ready(function () {
        $('#myDataTable').dataTable({
            "bJQueryUI": true,
            "aaSorting": [],
            "sPaginationType": "full_numbers",
            "aoColumns": [
                { "sName": "Email", "bSearchable": true, "bSortable": true },
                { "sName": "Full Name", "bSearchable": true, "bSortable": true },
                { "sName": "Gender", "bSearchable": true, "bSortable": true },
                 { "sName": "City", "bSearchable": true, "bSortable": true },
                { "sName": "Registered On", "bSearchable": true, "bSortable": true },
                { "sName": "Status", "bSearchable": true, "bSortable": true }               
            ]
        }).makeEditable({
            fnStartProcessingMode: function () {
                $("#processing_message").dialog();
            },
            fnEndProcessingMode: function () {
                $("#processing_message").dialog("close");
            }
        });
    });
</script>

<style type="text/css">
    .operationIcons {
        height: 25px;
        width: 25px;
    }
</style>

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            <font color="44c9ff">Submissions List</font>
        </h1>
        <span style="float: right; color: #3d3b3b; font-size: 16pt; margin-top: -50px;">
            @*  
                <img src="~/Images/add_icon.png" class="operationIcons" />
                     <a style="cursor:pointer; color:#3d3b3b; text-decoration:none; font-weight:200" href="/SubAdmin/Create/">Add New Sub Admin / Tutor</a>
            *@
        </span>
    </div>
</div>

<table id="myDataTable" style="width: 100%;">
    <thead>
        <tr>
            <th>User Email</th>
            <th>Course Name</th>
            <th>Assessment No</th>
            <th>Discription</th>
            <th>Answer</th>
            <th>Submiited On</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Email</td>
                <td>@item.CoursePrice</td>
                <td>@item.Discription</td>
                <td>@item.PaidAmount</td>
                <td>@item.PaidBy</td>
                <td>@item.PaidDate</td>
                @*<td> 
                      <img src="~/Images/delete_icon.png" class="operationIcons"  onclick="DeleteUSerPermanentaly(@item.UserId)" title="Delete Permanentaly" />&nbsp;&nbsp;
                         <img src="~/Images/edit_icon.png" class="operationIcons" title="Edit Information" onclick="EditInfo(@item.UserId)" />&nbsp;&nbsp;
                            <img src="~/Images/u[date_icon.png" class="operationIcons" title="Set Access Rights" onclick="SetAccess(@item.UserId)" />
                </td>*@
            </tr>
        }
    </tbody>
</table>

