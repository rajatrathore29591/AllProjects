<table id="myDataTable" style="width: 100%;">
    <thead>
        <tr>
            <th>
                <input type="checkbox" id="checkboxall" title="Select All" /></th>
            <th>Email</th>
            <th>Full Name</th>
            <th>Gender</th>
            <th>Country</th>
            <th>Registered On</th>
            <th>Status</th>
            <th>Suggested User</th>
            <th>Tutor</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            
            <tr>
                <td>
                    <input type="checkbox" name="UsrId" value="@item.UserId"/>
                <td ><span>@item.Email</span></td>
                <td ><span>@item.FirstName @item.LastName</span></td>
                <td style="width: 120px;" ><span>@item.Gender</span></td>
                <td style="width: 120px;" ><span>@item.Country</span></td>
                <td><span >@item.CreatedDate</span></td>
                <td align="center">
                    @if (item.IsActive == true)
                    {
                        <input type="button" value="Active" style="color:white; background-color:green; border:none;" id="btnStatus-@item.UserId" onclick="ManageUserStatus(@item.UserId)" />
                    }
                    else
                    {
                        <input type="button" value="Inactive" style="color:white; background-color:red; border:none;" id="btnStatus-@item.UserId" onclick="ManageUserStatus(@item.UserId)" />
                    }
                </td>
                <td>
                    @if (item.IsSuggested == 1)
                    {
                        <input type="button" value="Yes" style="color:white; width:50px; background-color:green; border:none;" id="btnSuggested-@item.UserId" onclick="ManageUserSuggested('@item.UserId ','1')" />
                    }
                    else
                    {
                        <input type="button" value="No" style="color:white; width:50px; background-color:red; border:none;" id="btnSuggested-@item.UserId" onclick="ManageUserSuggested('@item.UserId ','0')" />
                    }
                </td>
                <td>
                    @if (item.TutFirstName == null)
                    {
                        <a style="cursor:pointer" onclick="window.location.href= '@Url.Action("AddTutor", "Tutor", new { userId = item.UserId })'" >Tutor</a>
                    }
                    else
                    {
                        <span>@item.TutFirstName @item.TutLastName</span> 
                    }
                </td>
                <td>
                    @*<img src="~/Images/add_icon.png" class="operationIcons" />
                    &nbsp;*@
                    <img src="~/Images/delete_icon.png" class="operationIcons"  onclick="DeleteUSerPermanentaly(@item.UserId)" title="Delete" />&nbsp;&nbsp;
                    <img src="~/Images/detail_icon.png" class="operationIcons" title="Detail" onclick="window.location.href= '@Url.Action("UserProfile", "UserAccounts", new { userId = item.UserId })'" />&nbsp;&nbsp;
                    @*<img src="~/Images/edit_icon.png" class="operationIcons" />&nbsp;&nbsp;
                    <img src="~/Images/u[date_icon.png" class="operationIcons" />*@
                </td>
            </tr>
        }
    </tbody>

</table>
